page{
    background-color: #fff;
}
.shop{
    padding: 20rpx;
    border-bottom: 1rpx solid #ddd;
    display: flex;
    position: relative;
}
.shop-img{
    width: 160rpx;
    height: 180rpx;
    margin-right: 20rpx;
}
.shop-info{
    width: 520rpx;
    display: flex;
    flex-direction: column;
    font-size: 12px;
    color: #666;
    /* 设置行高 */
    line-height: 1.5;
}
.shop-title{
    font-size: 16px;
    color: #333;
    /* 设置店铺名称宽度*/
    width: 370rpx;
}
.shop-star{
    position: absolute;
    right: 20rpx;
    top: 20rpx;
    color: #e2e2e2;
}

